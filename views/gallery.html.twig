{% extends 'layout.html.twig' %}
{% set active = "gallery" %}
{% block extraJavascript %}
    <script src="/public/js/jquery.blueberry.js"></script>
    <script>
        $(window).load(function () {
            $('.blueberry').blueberry();
        });
    </script>
{% endblock %}
{% block extra %}
    <link rel="stylesheet" href="/public/css/blueberry.css">
    <style>
        ul.slides{
            margin: 0px;
        }
        ul.pager li a{
            border: none;
        }
    </style>
{% endblock %}

{% block panel %}
<div class="row selector">
<div class="span5" style="text-align:center">
    <a href="{{ path('gallery') }}" class="active">Platos Destacados</a>
</div>
<div class="span5" style="text-align:center">
    <a href="{{ path('galleryoutdoor') }}">Exterior</a>
</div>
</div>
<hr>
    <div class="blueberry">
        <ul class="slides">
            {% for entity in entities %}
                <li>
                    <img src="{{ entity.path }}" />
                    <div>
                        <h3>{{ entity.name }}</h3>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

{# old gallery
<ul id="pg">
	{% for entity in entities %}
		<li>
			<img src="{{ entity.path }}" alt="{{entity.name}}">
			<p>{{entity.name}}</p>
		</li>
	{% endfor %}
</ul>
#}
<div style="clear:both"></div>
{% endblock %}
{% block extraJavascriptOld %}
<script type="text/javascript" src="/public/js/jphotogrid.min.js"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$('#pg').jphotogrid({
			baseCSS: {
				width: '31%',
				height: '180px',
				padding: '0px',

			},
			selectedCSS: {
				top: '0',
				left: '0',
				width: '100%',
				height: '100%',
				padding: '0px',
                backbroundColor: '#333'
			}
		});
			
	});
</script>
{% endblock %}
{% block extraOld %}
<style type="text/css">
#pg { position: relative; min-height: 885px; margin-left: 0px; padding-left: 0px;  width:100% }
#pg li { position: relative; list-style: none; width: 31%; margin-left: 3%; height: 180px; overflow: hidden; float: left; z-index: 2; opacity: .9; margin:10px; background-color: white; }
#pg li { opacity: 1; box-shadow: 0px 0px 10px #888; }
#pg li.active { opacity: 1; box-shadow: 0px 0px 5px #333; background-color: #333; }

#pg li.active img { box-shadow: 0px 0px 10px #999;  }
#pg li.selected { opacity: 1; z-index: 99; -moz-box-shadow: 0px 0px 10px #fff; -webkit-box-shadow: 0px 0px 10px #fff; margin-top: -10px; margin-left: -10px; }
#pg li img { display: block; width: 100%;  }
#pg li p { color: #333; margin: 10px 0; font-size: 18px; margin:5px }
</style>
{% endblock %}
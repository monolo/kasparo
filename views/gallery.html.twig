{% extends 'layout.html.twig' %}
{% set active = "gallery" %}
{% block panel %}
<ul id="pg">
	{% for entity in entities %}
		<li>
			<img src="{{ entity.path }}" alt="{{entity.name}}">
			<p>{{entity.name}}</p>
		</li>
	{% endfor %}
</ul>
{% endblock %}
{% block extraJavascript %}
<script type="text/javascript" src="/public/js/jphotogrid.min.js"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$('#pg').jphotogrid({
			baseCSS: {
				width: '275px',
				height: '167px',
				padding: '50px',
			},
			selectedCSS: {
				top: '50px',
				left: '100px',
				width: '500px',
				height: '360px',
				padding: '10px'
			}
		});
			
	});
</script>
{% endblock %}
{% block extra %}
<style type="text/css">
#pg { position: relative; height: 585px;  }
#pg li { position: relative; list-style: none; width: 275px; height: 117px; overflow: hidden; float: left; z-index: 2; opacity: .3; }
#pg li.active { opacity: 1; }
#pg li.selected { opacity: 1; z-index: 99; -moz-box-shadow: 0px 0px 10px #fff; -webkit-box-shadow: 0px 0px 10px #fff; }
#pg li img { display: block; width: 100%; }
#pg li p { color: white; margin: 10px 0; font-size: 12px; }
</style>
{% endblock %}
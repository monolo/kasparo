{% extends 'layout.html.twig' %}
{% set active = "press" %}
{% block panel %}
    <h2>{% trans %}map{% endtrans %}</h2>
    <hr class="soften">
    <div class="span9 offset 1">
        <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q=kasparo&amp;hl=es&amp;sll=37.0625,-95.677068&amp;sspn=48.50801,88.417969&amp;hq=kasparo&amp;t=m&amp;ie=UTF8&amp;z=16&amp;iwloc=A&amp;output=embed"></iframe><br /><small><a href="https://maps.google.com/maps?q=kasparo&amp;hl=es&amp;sll=37.0625,-95.677068&amp;sspn=48.50801,88.417969&amp;hq=kasparo&amp;t=m&amp;ie=UTF8&amp;z=16&amp;iwloc=A&amp;source=embed" style="color:#0000FF;text-align:left">{% trans %}see_map{% endtrans %}</a></small>
    </div>

    <h2>{% trans %}press{% endtrans %}</h2>
    <hr class="soften">
    <ul id="pg">
        {% for entity in entities %}
            <li>
                <img src="{{ entity.path }}" alt="{{entity.name}}">
                <p>{{entity.name}}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
{% block extraJavascript %}
    <script type="text/javascript" src="/public/js/jphotogrid.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#pg').jphotogrid({
                baseCSS: {
                    width: '31%',
                    height: '160px',
                    padding: '0px'
                },
                selectedCSS: {
                    top: '0',
                    left: '0',
                    width: '100%',
                    height: '100%',
                    padding: '0px',
                    backbroundColor: '#333'
                }
            });

        });
    </script>
{% endblock %}
{% block extra %}
    <style type="text/css">
        #pg { position: relative; min-height: 885px; margin-left: 0px; padding-left: 0px;  width:100% }
        #pg li { position: relative; list-style: none; width: 31%; margin-left: 3%; height: 160px; overflow: hidden; float: left; z-index: 2; opacity: .9; margin:10px; background-color: white; }
        #pg li.active { opacity: 1; box-shadow: 0px 0px 5px #333; background-color: #333; }
        #pg li.active img { box-shadow: 0px 0px 10px #999;  }
        #pg li.selected { opacity: 1; z-index: 99; -moz-box-shadow: 0px 0px 10px #fff; -webkit-box-shadow: 0px 0px 10px #fff; }
        #pg li img { display: block; width: 100%;  }
        #pg li p { color: #333; margin: 10px 0; font-size: 18px; margin:5px }
    </style>
{% endblock %}